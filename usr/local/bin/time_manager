#!/usr/bin/env python3

import os
import sys

SCRIPT_DIR = os.path.dirname(os.path.abspath(__file__))
PACKAGE_PATH = os.path.join(os.path.dirname(SCRIPT_DIR), "lib/python3/dist-packages")

if PACKAGE_PATH not in sys.path:
  sys.path.insert(0, PACKAGE_PATH)

try:
  from time_manager.time_manager import main
except ImportError as e:
  print(f"Error: {e}")
  print(f"Current Python path: {sys.path}")
  print(f"Looking for package in: {PACKAGE_PATH}")
  sys.exit(1)

if __name__ == "__main__":
  main()